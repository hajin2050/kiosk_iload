<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_vehicle_case_form" model="ir.ui.view">
            <field name="name">vehicle.case.form</field>
            <field name="model">vehicle.case</field>
            <field name="arch" type="xml">
                <form string="Vehicle Case">
                    <header>
                        <button string="Received" type="object" name="action_set_received"
                                class="oe_highlight" states="NEED_MORE_DOCS,COMPLETED"/>
                        <button string="Need More Documents" type="object" name="action_need_more_docs"
                                class="oe_highlight" states="RECEIVED,COMPLETED"/>
                        <button string="Complete" type="object" name="action_complete"
                                class="oe_highlight" states="RECEIVED,NEED_MORE_DOCS"/>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" name="action_sync_to_kiosk" class="oe_stat_button" icon="fa-sync">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Sync to Kiosk</span>
                                </div>
                            </button>
                            <button type="object" name="action_generate_pdf" class="oe_stat_button" icon="fa-file-pdf-o">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Generate PDF</span>
                                </div>
                            </button>
                            <button type="object" name="action_view_documents" class="oe_stat_button" icon="fa-files-o">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value"><field name="document_count"/></span>
                                    <span class="o_stat_text">Documents</span>
                                </div>
                            </button>
                        </div>
                        
                        <group>
                            <group name="vehicle_info" string="Vehicle Information">
                                <field name="external_uuid" readonly="1"/>
                                <field name="plate_number"/>
                                <field name="vin"/>
                            </group>
                            <group name="owner_info" string="Owner Information">
                                <field name="owner_type"/>
                                <field name="owner_name"/>
                                <field name="company_name" attrs="{'invisible': [('owner_type', '=', 'PERSONAL')]}"/>
                                <field name="business_reg_no" attrs="{'invisible': [('owner_type', '=', 'PERSONAL')]}"/>
                                <field name="language"/>
                            </group>
                        </group>
                        
                        <group>
                            <group name="ocr_info" string="OCR Information">
                                <field name="ocr_validated"/>
                                <field name="ocr_issues" widget="text"/>
                            </group>
                            <group name="timestamps" string="Timestamps">
                                <field name="submitted_at"/>
                                <field name="completed_at"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page name="documents" string="Documents">
                                <field name="document_ids">
                                    <tree>
                                        <field name="doc_type"/>
                                        <field name="filename"/>
                                        <field name="file_size"/>
                                        <field name="uploaded_at"/>
                                        <button string="View" type="object" name="action_view_attachment" icon="fa-eye"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="doc_type"/>
                                            <field name="attachment_id"/>
                                            <field name="uploaded_at"/>
                                        </group>
                                        <group string="OCR Results">
                                            <field name="ocr_text" widget="text"/>
                                            <field name="mapped_fields" widget="ace" options="{'mode': 'json'}"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page name="history" string="History">
                                <field name="message_ids" widget="mail_thread"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- List View -->
        <record id="view_vehicle_case_tree" model="ir.ui.view">
            <field name="name">vehicle.case.tree</field>
            <field name="model">vehicle.case</field>
            <field name="arch" type="xml">
                <tree string="Vehicle Cases">
                    <field name="plate_number"/>
                    <field name="owner_name"/>
                    <field name="owner_type"/>
                    <field name="status" decoration-info="status == 'RECEIVED'"
                           decoration-warning="status == 'NEED_MORE_DOCS'"
                           decoration-success="status == 'COMPLETED'"/>
                    <field name="ocr_validated"/>
                    <field name="document_count"/>
                    <field name="submitted_at"/>
                    <field name="completed_at"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_vehicle_case_search" model="ir.ui.view">
            <field name="name">vehicle.case.search</field>
            <field name="model">vehicle.case</field>
            <field name="arch" type="xml">
                <search string="Search Vehicle Cases">
                    <field name="plate_number"/>
                    <field name="owner_name"/>
                    <field name="external_uuid"/>
                    <filter string="Received" name="received" domain="[('status', '=', 'RECEIVED')]"/>
                    <filter string="Need More Documents" name="need_more_docs" domain="[('status', '=', 'NEED_MORE_DOCS')]"/>
                    <filter string="Completed" name="completed" domain="[('status', '=', 'COMPLETED')]"/>
                    <filter string="OCR Validated" name="ocr_validated" domain="[('ocr_validated', '=', True)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                        <filter string="Owner Type" name="group_owner_type" context="{'group_by': 'owner_type'}"/>
                        <filter string="Language" name="group_language" context="{'group_by': 'language'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_vehicle_case_kanban" model="ir.ui.view">
            <field name="name">vehicle.case.kanban</field>
            <field name="model">vehicle.case</field>
            <field name="arch" type="xml">
                <kanban default_group_by="status">
                    <field name="id"/>
                    <field name="plate_number"/>
                    <field name="owner_name"/>
                    <field name="status"/>
                    <field name="document_count"/>
                    <field name="submitted_at"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_title">
                                        <strong><field name="plate_number"/></strong>
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="owner_name"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <span class="o_badge o_badge_info">
                                                <field name="document_count"/> docs
                                            </span>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="submitted_at"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action -->
        <record id="action_vehicle_case" model="ir.actions.act_window">
            <field name="name">Vehicle Cases</field>
            <field name="res_model">vehicle.case</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_received': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new vehicle deregistration case
                </p>
                <p>
                    Cases are automatically created from the kiosk system when customers submit their deregistration requests.
                </p>
            </field>
        </record>
    </data>
</odoo>