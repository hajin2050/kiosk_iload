generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model VehicleCase {
  id           String    @id @default(cuid())
  plateNumber  String?
  ownerName    String?
  ownerType    String?   // 'INDIVIDUAL' | 'BUSINESS' | 'CORPORATE'
  companyName  String?
  isForeigner  Boolean?  @default(false)
  qrToken      String?
  status       String?   // 'RECEIVED' | 'NEED_MORE_DOCS' | 'COMPLETED'
  submittedAt  DateTime? @default(now())
  completedAt  DateTime?
  summaryJson  Json?     // 통합 요약 (PDF 채움에 쓰는 표준 스키마)
  documents    Document[]
  pdfFiles     PdfFile[]
}

model Document {
  id              String   @id @default(cuid())
  caseId          String
  type            String   // 'VEHICLE_REGISTRATION' | 'DELEGATION_FORM' | 'INVOICE' | 'ID_CARD'
  filePath        String
  ocrResult       Json?
  mappedFields    Json?
  validatedFields Json?
  ocrConfidence   String?
  ocrErrors       Json?
  createdAt       DateTime @default(now())

  vehicleCase     VehicleCase @relation(fields: [caseId], references: [id])
}

model PdfFile {
  id         String   @id @default(cuid())
  caseId     String
  case       VehicleCase @relation(fields: [caseId], references: [id])
  kind       String   // 'DEREG_FORM' | 'INVOICE'
  storageKey String   // 경로 또는 S3 key
  createdAt  DateTime @default(now())
}

